#!/usr/bin/env ruby

begin
  require 'comply/cli'
rescue
  require 'rubygems'
  require 'comply/cli'
end

begin
  Comply::CLI::Agent.start
rescue HyperResource::ClientError => e
  m = if e.body['error'] == 'invalid_token'
        'API authentication error: please run comply login'
      else
        "An error occurred: #{e.body['message']}"
      end
  Comply::CLI.logger.error(m)
  exit 1
rescue Comply::CLI::UserError => e
  Comply::CLI.logger.error e.message
  exit 1
end
